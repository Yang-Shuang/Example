<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#dddddd"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/input_tv1"
                style="@style/number_password_input_text_style"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/bg_number_input"
                android:text="1" />

            <TextView
                android:id="@+id/input_tv2"
                style="@style/number_password_input_text_style"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/bg_number_input"
                android:text="2" />

            <TextView
                android:id="@+id/input_tv3"
                style="@style/number_password_input_text_style"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/bg_number_input"
                android:text="3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/input_tv4"
                style="@style/number_password_input_text_style"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/bg_number_input"
                android:text="4" />

            <TextView
                android:id="@+id/input_tv5"
                style="@style/number_password_input_text_style"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/bg_number_input"
                android:text="5" />

            <TextView
                android:id="@+id/input_tv6"
                style="@style/number_password_input_text_style"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/bg_number_input"
                android:text="6" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/input_tv7"
                style="@style/number_password_input_text_style"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/bg_number_input"
                android:text="7" />

            <TextView
                android:id="@+id/input_tv8"
                style="@style/number_password_input_text_style"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/bg_number_input"
                android:text="8" />

            <TextView
                android:id="@+id/input_tv9"
                style="@style/number_password_input_text_style"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/bg_number_input"
                android:text="9" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_margin="2dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/input_tv0"
                style="@style/number_password_input_text_style"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/bg_number_input"
                android:text="0" />

            <TextView
                android:id="@+id/input_delete_tv"
                style="@style/number_password_input_text_style"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/bg_number_input"
                android:text="←" />
        </LinearLayout>
    </LinearLayout>
</merge>