<?xml version="1.0" encoding="utf-8"?>
<com.yang.viewdemo.weight.CustomRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.yang.viewdemo.weight.CustomTextView
        android:id="@+id/item_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">

    </com.yang.viewdemo.weight.CustomTextView>

    <com.yang.viewdemo.weight.CustomImageButton
        android:layout_margin="5dp"
        android:background="#00000000"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="fitXY"
        android:layout_alignParentRight="true"
        android:src="@mipmap/ic_launcher" />
</com.yang.viewdemo.weight.CustomRelativeLayout>
